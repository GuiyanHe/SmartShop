<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="edu.tamu.csce634.smartshop.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_home_to_feedback"
            app:destination="@id/navigation_feedback" />
    </fragment>

    <!-- 这是 ListFragment -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="edu.tamu.csce634.smartshop.ui.list.ListFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_list" >

        <!-- 1. 在这里添加了从 List 到 Map 的 Action -->
        <action
            android:id="@+id/action_list_to_map"
            app:destination="@id/navigation_map" />

    </fragment>

    <!-- 2. 在这里添加了 MapFragment 的完整定义 -->
    <fragment
        android:id="@+id/navigation_map"
        android:name="edu.tamu.csce634.smartshop.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_recipe"
        android:name="edu.tamu.csce634.smartshop.ui.recipe.RecipeFragment"
        android:label="@string/title_recipe"
        tools:layout="@layout/fragment_recipe">
        <action
            android:id="@+id/action_recipe_to_detail"
            app:destination="@id/navigation_recipe_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_recipe_detail"
        android:name="edu.tamu.csce634.smartshop.ui.recipedetail.RecipeDetailFragment"
        android:label="Recipe Detail"
        tools:layout="@layout/fragment_recipe_detail" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="edu.tamu.csce634.smartshop.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_feedback"
        android:name="edu.tamu.csce634.smartshop.ui.feedback.FeedbackFragment"
        android:label="Feedback"
        tools:layout="@layout/fragment_feedback" />
</navigation>
