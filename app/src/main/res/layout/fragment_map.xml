<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 顶部标题条，可以先写死 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Map Page"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="#19A95F"
        android:textColor="#FFFFFF" />

    <!-- 地图：现在就当成一张图片 -->
    <ImageView
        android:id="@+id/img_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:background="#333333"
        android:src="@drawable/store_map" />

    <!-- 底部指示区，模仿你图里白色那块 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- 当前 item 名字 -->
        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broccoli Crown"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000" />

        <!-- 文本指示，比如 Aisle 9 / Produce 区 -->
        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Go to Aisle 9 → Produce section"
            android:textSize="14sp"
            android:textColor="#555555" />

        <!-- 进度，比如 (2/6) -->
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Item 2 / 6"
            android:textSize="12sp"
            android:textColor="#888888" />

        <!-- 按钮区 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_mark_done"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Use" />

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Next Item" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
