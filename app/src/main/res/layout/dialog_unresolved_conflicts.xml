<?xml version="1.0" encoding="utf-8"?>
<!-- 未解决冲突警告对话框 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- 顶部警告图标 -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_warning"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/red_500"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Warning icon"/>

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unresolved Conflicts"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- 说明文字 -->
    <TextView
        android:id="@+id/text_conflict_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 items conflict with your preferences:"
        android:textSize="15sp"
        android:textColor="@color/gray_600"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- 冲突列表 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_conflict_details"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/text_conflict_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Steak (Vegan)\n• Egg (Vegan)\n• Queso Fresco (Dairy allergy)"
            android:textSize="14sp"
            android:textColor="@color/red_600"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <!-- 询问文字 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue shopping with these items?"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_review"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Review"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@color/green_500"
            app:strokeColor="@color/green_500"
            app:cornerRadius="24dp"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue_anyway"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Continue"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/gray_600"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

    </LinearLayout>

</LinearLayout>