<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 顶部：拖动指示条 -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/gray_600"
        android:alpha="0.3"/>

    <!-- 标题 -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Replace: Steak"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp"/>

    <!-- 冲突原因警告 -->
    <LinearLayout
        android:id="@+id/layout_conflict_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_conflict_details"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="⚠"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/text_conflict_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Not suitable for vegan diet"
            android:textSize="14sp"
            android:textColor="@color/red_600"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- 副标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommended Substitutes:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/gray_600"
        android:paddingBottom="8dp"/>

    <!-- 替代品列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_substitutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:nestedScrollingEnabled="false"/>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@color/gray_600"
            app:strokeColor="@color/gray_600"
            app:cornerRadius="24dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Confirm"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/green_fab"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"/>

    </LinearLayout>

    <!-- 无替代品提示 -->
    <TextView
        android:id="@+id/text_no_substitutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠ No suitable substitutes available.\nConsider setting quantity to 0."
        android:textSize="14sp"
        android:textColor="@color/gray_600"
        android:textAlignment="center"
        android:padding="24dp"
        android:visibility="gone"/>

</LinearLayout>