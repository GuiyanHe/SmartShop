<?xml version="1.0" encoding="utf-8"?>
<!--
单个购物项卡片布局
左：ImageView
中：标题、SKU
下：Options 链接
右：数量控制组（- Qty +）
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF">

    <!-- 冲突警告徽章 -->
    <ImageView
        android:id="@+id/img_conflict_badge"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_warning"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/red_500"
        android:padding="6dp"
        app:tint="@android:color/white"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:visibility="gone"
        android:contentDescription="Conflict warning"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- 左侧：商品图片（Glide 加载），无图时用占位色 -->
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="#D8F3DC"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="product image" />

        <!-- 右上角：数量控制（- Qty +）为一组横向布局 -->
        <LinearLayout
            android:id="@+id/qtyGroup"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_qty_badge"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="−"
                android:textSize="18sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/qtyBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Qty: 1"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="+"
                android:textSize="18sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- 商品名（优先显示 selectedSkuName，否则 name） -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cauliflower (Organic)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toEndOf="@id/itemImage"
            android:layout_toStartOf="@id/qtyGroup"
            android:layout_marginStart="12dp"
            android:layout_alignParentTop="true" />

        <!-- SKU 描述（selectedSkuName + skuSpec） -->
        <TextView
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKU: Organic Cauliflower 500g"
            android:textColor="#777777"
            android:textSize="13sp"
            android:layout_below="@id/title"
            android:layout_toEndOf="@id/itemImage"
            android:layout_toStartOf="@id/qtyGroup"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp" />

        <!-- 新增：Recipe需求量标签 -->
        <TextView
            android:id="@+id/neededLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe needs: 0.2 Oz"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/sub"
            android:layout_toEndOf="@id/itemImage"
            android:layout_toStartOf="@id/qtyGroup"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp" />

        <!-- Options 链接 -->
        <TextView
            android:id="@+id/btnReplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Options ›"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:layout_below="@id/neededLabel"
            android:layout_toEndOf="@id/itemImage"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp" />

        <!-- 新增：冲突详情展开区域（默认隐藏） -->
        <LinearLayout
            android:id="@+id/layout_conflict_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnReplace"
            android:layout_toEndOf="@id/itemImage"
            android:layout_toStartOf="@id/qtyGroup"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="@drawable/bg_conflict_details"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_conflict_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠ Contains allergen: nuts, dairy"
                android:textSize="13sp"
                android:textColor="@color/red_600"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_set_zero"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Set to 0"
                    android:textSize="13sp"
                    app:strokeColor="@color/gray_600"
                    android:textColor="@color/gray_600"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_replace_conflict"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Replace"
                    android:textSize="13sp"
                    android:backgroundTint="@color/green_500"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
