<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <!-- 主卡片 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 商品信息区域 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp">

                <!-- 左侧：商品图片 -->
                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:background="#D8F3DC"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="product image" />

                <!-- 右侧：数量控制 -->
                <LinearLayout
                    android:id="@+id/qtyGroup"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    android:background="@drawable/quantity_control_bg"
                    android:padding="2dp">

                    <ImageButton
                        android:id="@+id/btnMinus"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_remove"
                        android:scaleType="fitCenter"
                        android:contentDescription="Decrease quantity"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/qtyBadge"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <ImageButton
                        android:id="@+id/btnPlus"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_add"
                        android:scaleType="fitCenter"
                        android:contentDescription="Increase quantity"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <!-- 商品名 -->
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_toEndOf="@id/itemImage"
                    android:layout_toStartOf="@id/qtyGroup"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <!-- SKU 描述 -->
                <TextView
                    android:id="@+id/sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKU info"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_below="@id/title"
                    android:layout_toEndOf="@id/itemImage"
                    android:layout_toStartOf="@id/qtyGroup"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <!-- Recipe 需求量 -->
                <TextView
                    android:id="@+id/neededLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe needs: 1 Oz"
                    android:textColor="#4CAF50"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_below="@id/sub"
                    android:layout_toEndOf="@id/itemImage"
                    android:layout_toStartOf="@id/qtyGroup"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"/>

                <!-- Options 链接 -->
                <TextView
                    android:id="@+id/btnReplace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Options ›"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:layout_below="@id/neededLabel"
                    android:layout_toEndOf="@id/itemImage"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>

            <!-- 冲突详情卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layout_conflict_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#FFCDD2"
                app:cardBackgroundColor="#FFEBEE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 冲突原因 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:text="⚠"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/text_conflict_message"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Not suitable for vegan diet"
                            android:textSize="14sp"
                            android:textColor="#C62828"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- 操作按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_set_zero"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Set to 0"
                            android:textSize="13sp"
                            android:textAllCaps="false"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:strokeColor="@color/gray_600"
                            android:textColor="@color/gray_600"
                            app:cornerRadius="22dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_replace_conflict"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Replace"
                            android:textSize="13sp"
                            android:textAllCaps="false"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="@color/green_fab"
                            android:textColor="@android:color/white"
                            app:cornerRadius="22dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

    <!-- 警告徽章（独立层）-->
    <ImageView
        android:id="@+id/img_conflict_badge"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_warning"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/red_500"
        android:padding="8dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:contentDescription="Conflict warning"/>
</FrameLayout>