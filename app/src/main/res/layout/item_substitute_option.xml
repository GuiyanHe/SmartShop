<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_substitute"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="2dp"
    app:strokeColor="@android:color/transparent"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_substitute"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@color/gray_200"
            android:contentDescription="Substitute image"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_substitute_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tofu"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_substitute_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein source • 1 → 2 Oz"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_selected"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/checkbox_on_background"            app:tint="@color/green_500"
            android:visibility="gone"
            android:contentDescription="Selected indicator"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>